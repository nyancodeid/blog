@font-face
  font-family CustomSansSerif
  font-style normal
  font-weight 700
  font-display swap
  unicode-range U+000-5FF
  src url('https://cdn.statically.io/gh/nyancodeid/blog/708174c/dist/fonts/keivit-bold-webfont.woff') format('woff'), url('https://cdn.statically.io/gh/nyancodeid/blog/708174c/dist/fonts/keivit-bold-webfont.woff2') format('woff2')
